<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="vm"
            type="net.alanproject.mygame.ui.home.HomeViewModel" />
    </data>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/frag_home"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_main_update"
                style="@style/TV_TITLE_STYLE"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:text="New Update"
                app:layout_constraintBottom_toTopOf="@id/vp_update"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.viewpager2.widget.ViewPager2
                android:id="@+id/vp_update"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                app:layout_constraintTop_toBottomOf="@id/tv_main_update" />

            <TextView
                android:id="@+id/tv_main_hot"
                style="@style/TV_TITLE_STYLE"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:text="What's Hot Now"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/vp_update" />

            <LinearLayout
                android:id="@+id/linear_layout_hot"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/black"
                android:orientation="vertical"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_main_hot">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="8dp"
                    android:text="New Release"
                    android:textColor="@color/white" />

                <androidx.viewpager2.widget.ViewPager2
                    android:id="@+id/vp_new"
                    android:background="@color/black_900"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:paddingLeft="30dp"
                    android:paddingRight="30dp" />

                <TextView

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:layout_marginTop="8dp"
                    android:text="Upcoming Games"
                    android:textColor="@color/white" />

                <androidx.viewpager2.widget.ViewPager2
                    android:id="@+id/vp_upcoming"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:paddingLeft="30dp"
                    android:paddingRight="30dp" />
            </LinearLayout>

            <TextView
                android:id="@+id/tv_main_rank"
                style="@style/TV_TITLE_STYLE"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:text="What's Hot Now"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/linear_layout_hot" />

            <androidx.viewpager2.widget.ViewPager2
                android:id="@+id/vp_rank"
                android:layout_width="match_parent"
                android:layout_height="600dp"
                app:layout_constraintTop_toBottomOf="@id/tv_main_rank" />


        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</layout>

